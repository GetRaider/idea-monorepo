{
  "extends": "@denzel/typescript-config/nestjs.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@entities/*": ["entities/*"],
      "@schemas/*": ["schemas/*"],
      "@models/*": ["models/*"],
      "@helpers/*": ["helpers/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "test", "**/*spec.ts"]
}
