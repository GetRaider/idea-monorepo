{
  "name": "@repo/api",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "tsc -b -v",
    "rebuild": "rm -rf dist && pnpm build",
    "dev": "pnpm build --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "format": "eslint \"{src,apps,libs,test}/**/*.ts\""
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*"
      ]
    }
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.js"
    }
  },
  "dependencies": {
    "@nestjs/mapped-types": "catalog:",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "catalog:",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.3.1",
    "@types/express": "catalog:",
    "class-validator": "catalog:",
    "ts-loader": "catalog:",
    "ts-node": "catalog:",
    "typescript": "5.5.4",
    "tsconfig-paths": "catalog:"
  }
}
