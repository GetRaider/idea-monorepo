{
  "name": "devinity-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "nest build",
    "rebuild": "rm -rf dist && pnpm build",
    "dev": "NODE_ENV=development nest start --watch",
    "prod": "NODE_ENV=production node dist/src/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "auth:generate": "pnpm dlx @better-auth/cli@latest generate",
    "auth:generate:config": "pnpm dlx @better-auth/cli@latest generate --config src/modules/auth/auth.module.ts",
    "auth:migrate": "pnpm dlx @better-auth/cli@latest migrate --config src/modules/auth/auth.module.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "vercel-build": "pnpm build"
  },
  "dependencies": {
    "@repo/api": "workspace:*",
    "@nestjs/cache-manager": "catalog:",
    "@nestjs/common": "catalog:",
    "@nestjs/config": "catalog:",
    "@nestjs/core": "catalog:",
    "@nestjs/platform-express": "catalog:",
    "@thallesp/nestjs-better-auth": "catalog:",
    "better-auth": "catalog:",
    "cache-manager": "catalog:",
    "cache-manager-ioredis-yet": "catalog:",
    "drizzle-orm": "catalog:",
    "express": "catalog:",
    "ioredis": "catalog:",
    "pg": "catalog:",
    "reflect-metadata": "catalog:",
    "rxjs": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@better-auth/cli": "catalog:",
    "@jest/globals": "catalog:",
    "@nestjs/cli": "catalog:",
    "@nestjs/jwt": "catalog:",
    "@nestjs/mongoose": "catalog:",
    "@nestjs/schematics": "catalog:",
    "@nestjs/testing": "catalog:",
    "@types/bcryptjs": "catalog:",
    "@types/express": "catalog:",
    "@types/node": "catalog:",
    "@types/pg": "catalog:",
    "@types/supertest": "catalog:",
    "bcryptjs": "catalog:",
    "class-transformer": "catalog:",
    "class-validator": "catalog:",
    "dotenv": "catalog:",
    "drizzle-kit": "catalog:",
    "jest": "catalog:",
    "source-map-support": "catalog:",
    "supertest": "catalog:",
    "ts-jest": "catalog:",
    "ts-loader": "catalog:",
    "ts-node": "catalog:",
    "tsc-alias": "catalog:",
    "tsconfig-paths": "catalog:",
    "typescript": "catalog:",
    "uuid": "catalog:"
  }
}
