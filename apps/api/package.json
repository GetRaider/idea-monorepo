{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "nest build",
    "dev": "NODE_ENV=development nodemon",
    "prod": "NODE_ENV=production nodemon",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "auth:generate": "pnpm dlx @better-auth/cli@latest generate",
    "auth:generate:config": "pnpm dlx @better-auth/cli@latest generate --config src/modules/auth/auth.module.ts",
    "auth:migrate": "pnpm dlx @better-auth/cli@latest migrate --config src/modules/auth/auth.module.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@denzel/api": "workspace:*",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@thallesp/nestjs-better-auth": "^1.0.2",
    "better-auth": "^1.3.5",
    "drizzle-orm": "^0.44.4",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.3.5",
    "@denzel/eslint-config": "workspace:*",
    "@denzel/jest-config": "workspace:*",
    "@denzel/typescript-config": "workspace:*",
    "@jest/globals": "^29.7.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mongoose": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcryptjs": "2.4.6",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.31.4",
    "jest": "^29.7.0",
    "nodemon": "3.1.7",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "typescript": "5.5.4",
    "uuid": "11.0.3"
  }
}
