{
  "name": "idea-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "author": "Andrew Polovets",
  "license": "MIT",
  "engines": {
    "node": ">=20.18.0"
  },
  "packageManager": "pnpm@10.9.0",
  "scripts": {
    "clean": "rm -rf .turbo && turbo run clean",
    "build": "turbo run build",
    "rebuild": "pnpm run clean && turbo run build",
    "dev": "turbo run dev",
    "dev:devinity": "turbo run dev --filter=devinity-api --filter=devinity-web --filter=@repo/api --filter=@repo/ui",
    "dev:take-and-do": "turbo run dev --filter=take-and-do --filter=@repo/ui",
    "prod": "turbo run prod",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "codeCheck": "npx tsc && pnpm lint"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@better-auth/cli": "1.3.8",
    "drizzle-kit": "catalog:",
    "eslint": "^8.57.0",
    "prettier": "^3.5.3",
    "turbo": "catalog:"
  },
  "dependencies": {
    "@thallesp/nestjs-better-auth": "catalog:",
    "better-auth": "catalog:",
    "drizzle-orm": "catalog:"
  }
}
