{
  "name": "@denzel/api",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "tsc -b -v",
    "rebuild": "rm -rf dist && pnpm build",
    "dev": "pnpm build --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "format": "eslint \"{src,apps,libs,test}/**/*.ts\""
  },
  "files": [
    "./dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*"
      ]
    }
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.js"
    }
  },
  "dependencies": {
    "@nestjs/mapped-types": "*",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0"
  },
  "devDependencies": {
    "@denzel/eslint-config": "workspace:*",
    "@denzel/typescript-config": "workspace:*",
    "@types/node": "^20.3.1",
    "@types/express": "^4.17.17",
    "class-validator": "^0.14.1",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "typescript": "5.5.4",
    "tsconfig-paths": "^4.2.0"
  }
}
