{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "tsconfig.build.tsbuildinfo"]
    },
    "lint": { "dependsOn": ["^lint"] },
    "format": { "dependsOn": ["^format"] },
    "test": {},
    "test:e2e": {}
  }
}
